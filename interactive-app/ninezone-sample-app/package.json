{
  "name": "ninezone-sample-app",
  "description": "9-Zone Sample App",
  "license": "MIT",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "os": [
    "win32",
    "linux",
    "darwin"
  ],
  "engines": {
    "node": ">=10.11.0 <13.0"
  },
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build:backend & npm run build:frontend",
    "build:frontend": "cross-env GENERATE_SOURCEMAP=false USE_FAST_SASS=true react-scripts build",
    "build:backend": "tsc -p tsconfig.backend.json",
    "clean": "rimraf lib build .rush",
    "lint": "eslint --config package.json --no-eslintrc ./src/**/*.{ts,tsx} 1>&2",
    "electron": "cross-env NODE_ENV=development electron lib/backend/electronmain.js",
    "start": "npm run start:servers",
    "start:webserver": "cross-env USE_FAST_SASS=true react-scripts start",
    "start:backend": "node lib/backend/webmain.js",
    "start:servers": "run-p \"start:webserver\" \"start:backend\"",
    "test": ""
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "^2.11.0-dev.43",
    "@bentley/context-registry-client": "^2.11.0-dev.43",
    "@bentley/ecschema-metadata": "^2.11.0-dev.43",
    "@bentley/electron-manager": "^2.11.0-dev.43",
    "@bentley/express-server": "^2.11.0-dev.43",
    "@bentley/frontend-authorization-client": "^2.11.0-dev.43",
    "@bentley/geometry-core": "^2.11.0-dev.43",
    "@bentley/icons-generic-webfont": "^1.0.0",
    "@bentley/imodelhub-client": "^2.11.0-dev.43",
    "@bentley/imodeljs-backend": "^2.11.0-dev.43",
    "@bentley/backend-itwin-client": "^2.11.0-dev.43",
    "@bentley/imodeljs-common": "^2.11.0-dev.43",
    "@bentley/imodeljs-frontend": "^2.11.0-dev.43",
    "@bentley/imodeljs-i18n": "^2.11.0-dev.43",
    "@bentley/imodeljs-quantity": "^2.11.0-dev.43",
    "@bentley/imodeljs-markup": "^2.11.0-dev.43",
    "@bentley/itwin-client": "^2.11.0-dev.43",
    "@bentley/presentation-backend": "^2.11.0-dev.43",
    "@bentley/presentation-common": "^2.11.0-dev.43",
    "@bentley/presentation-components": "^2.11.0-dev.43",
    "@bentley/presentation-frontend": "^2.11.0-dev.43",
    "@bentley/rbac-client": "^2.11.0-dev.43",
    "@bentley/ui-abstract": "^2.11.0-dev.43",
    "@bentley/ui-components": "^2.11.0-dev.43",
    "@bentley/ui-core": "^2.11.0-dev.43",
    "@bentley/ui-framework": "^2.11.0-dev.43",
    "@bentley/ui-ninezone": "^2.11.0-dev.43",
    "@bentley/telemetry-client": "^2.11.0-dev.43",
    "electron": "^8.2.1",
    "electron-devtools-installer": "^2.2.3",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-redux": "^7.2.0",
    "react-resize-detector": "^3.4.0",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@bentley/build-tools": "^2.11.0-dev.43",
    "@bentley/ecschema-metadata": "^2.11.0-dev.43",
    "@bentley/orbitgt-core": "^2.11.0-dev.43",
    "@bentley/product-settings-client": "^2.11.0-dev.43",
    "@bentley/react-scripts": "3.4.1",
    "@bentley/webgl-compatibility": "^2.11.0-dev.43",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^6.0.14",
    "@types/react-resize-detector": "^3.1.0",
    "cross-env": "^5.1.4",
    "node-sass": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.2",
    "eslint": "^6.8.0",
    "typescript": "~3.7.4",
    "webpack": "4.42.0"
  },
  "homepage": "http://localhost:3000/",
  "browserslist": [
    "electron 6.0.0",
    "last 4 chrome version",
    "last 4 firefox version",
    "last 4 safari version",
    "last 4 ios version",
    "last 4 ChromeAndroid version",
    "last 4 edge version",
    "not dead",
    "not <0.2%"
  ],
  "eslintConfig": {
    "extends": "./node_modules/@bentley/build-tools/.eslintrc.js",
    "parserOptions": {
      "project": [
        "tsconfig.json",
        "tsconfig.backend.json"
      ]
    }
  }
}
